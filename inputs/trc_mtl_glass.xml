<xml>
  <scene>
    <!-- Objects -->
    <!-- box -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallBottom" material="wall">
	<scale value="32"/>
	<translate z="-12"/>
      </object>
      <object type="plane" name="WallTop" material="wall">
	<scale value="32"/>
	<rotate angle="180" x="1"/>
	<translate z="12"/>
      </object>
      <object type="plane" name="WallBack" material="wall">
	<scale value="32"/>
	<rotate angle="90" x="1"/>
	<translate y="20"/>
      </object>
      <object type="plane" name="WallLeft" material="wallRed">
	<scale value="32"/>
	<rotate angle="90" y="1"/>
	<translate x="-15"/>
      </object>
      <object type="plane" name="WallRight" material="wallBlue">
	<scale value="32"/>
	<rotate angle="-90" y="1"/>
	<translate x="15"/>
      </object>
    </object>
    <!-- teapot -->
    <object type="obj" name="trc2017/solid_teapot.obj" material="mtl2">
      <scale value="0.8"/>
      <rotate angle="-30" z="1"/>
      <translate x="0" y="5" z="0"/>
      <object type="obj" name="trc2017/teapot-high.obj" material="mtl1">
        <scale value="0.5"/>
        <translate x="0" y="0" z="1.01"/>
      </object>
    </object>
    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse  r="1" g="1" b="1"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallRed">
      <diffuse  r="1.0" g="0.5" b="0.5"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallBlue">
      <diffuse  r="0.5" g="0.5" b="1.0"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="mtl1">
      <diffuse  r="1.0" g="0.3" b="0.3"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
      <glossiness value="20"/>
    </material>
    <material type="blinn" name="mtl2">
      <diffuse  value="0"/>
      <specular value="1.0"/>
      <glossiness value="80"/>
      <refraction value="1.0" index="1.52"/>
      <absorption r="0.1" g="0.001" b="0.1"/>
    </material>
    <!-- Lights -->
    <light type="point" name="pointLight">
      <intensity value="100.5"/>
      <position x="0" y="0" z="22"/>
    </light>
  </scene>
  <camera>
    <position x="0" y="-60" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>
